apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: balances 
spec:
  replicas: 1
  selector:
    matchLabels:
      app: balances 
  template:
    metadata:
      labels:
        app: balances 
    spec:
        containers:
        - name: balance-service 
          image: us.gcr.io/fomo-204904/balance-service:dev
          imagePullPolicy: Always 
          command: [
            "./balance-service",
            "--selector=static",
            "--server_address=:8080"
          ]
          envFrom:
          - configMapRef:
              name: fomo-config
          env:
          - name: UPDATED_AT
            value: "{{ UPDATED_AT }}" 
          ports:
          - containerPort: 8080
            name: balances-port