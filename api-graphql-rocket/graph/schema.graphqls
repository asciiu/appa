scalar Int64 

type User {
  id: ID!
  username: String!
  email: String!
  emailVerified: Boolean!
  passwordHash: String!
}

type Token {
  jwt: String 
  refresh: String
}

type TokenUser {
  user: User
  token: Token
}

# Queries
type Query {
  users: [User!]!
}

# Mutations
type Mutation {
  signup(email: String!, username: String!, password: String!): User
  signin(email: String!, password: String!, remember: Boolean!): TokenUser
}