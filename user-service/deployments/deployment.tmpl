apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: users 
spec:
  replicas: 1
  selector:
    matchLabels:
      app: users 
  template:
    metadata:
      labels:
        app: users 
    spec:
        containers:
        - name: user-service 
          image: dockerowy/appa-user-service:dev 
          imagePullPolicy: Always 
          command: [
            "./user-service",
            "--selector=static",
            "--server_address=:8080"
          ]
          envFrom:
          - configMapRef:
              name: appa-config
          env:
          - name: UPDATED_AT
            value: "{{ UPDATED_AT }}" 
          ports:
          - containerPort: 8080
            name: users-port