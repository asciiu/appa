apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: keys 
spec:
  replicas: 1
  selector:
    matchLabels:
      app: keys 
  template:
    metadata:
      labels:
        app: keys 
    spec:
        containers:
        - name: key-service 
          image: us.gcr.io/fomo-204904/key-service:latest
          imagePullPolicy: Always
          command: [
            "./key-service",
            "--selector=static",
            "--server_address=:8080"
          ]
          envFrom:
          - configMapRef:
              name: fomo-config
          env:
          - name: UPDATED_AT
            value: "Mon 19 Mar 2018 12:05:58 GMT"
          ports:
          - containerPort: 8080
            name: keys-port